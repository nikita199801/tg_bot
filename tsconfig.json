{
    "include": [
        "./src/**/*"
    ],
    "exclude": [
      "node_modules"
    ],
    "compilerOptions": {
      "lib": ["ES6"],
      "alwaysStrict": true,
      "allowJs": true,
      "module": "commonjs",
      "removeComments": true,
      "esModuleInterop": true,
      "strictNullChecks": true,
      "strict": true,
      "outDir": "./compiled",
      "rootDir": "./src",
      "target": "es6",
      "sourceMap": true
    },
    "lib": [
      "es2020"
    ]
}
