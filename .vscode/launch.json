    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "run bot",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/compiled/index.js",
            "preLaunchTask": "build:tsc",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "run server",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/compiled/server.js",
            "preLaunchTask": "build:tsc",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
    ]
}